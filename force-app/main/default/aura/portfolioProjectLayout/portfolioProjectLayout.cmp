<aura:component implements="forceCommunity:themeLayout,lightning:isUrlAddressable" access="global">
    <aura:attribute name="navBar" type="Aura.Component[]" required="false"/>
    <aura:attribute name="header" type="Aura.Component[]" required="false"/>
    <aura:attribute name="footer" type="Aura.Component[]" required="false"/>
    <aura:attribute name="buttonstate" type="Boolean" default="false"/>
        <lightning:layout class="aboutPg" multipleRows="true">
            <lightning:layoutItem class="navigationRegion" size="12">
                    <c:portfolioNavigation></c:portfolioNavigation>
            </lightning:layoutItem>
            <lightning:layoutItem class="mainContentRegion" size="12">
                <lightning:layout>
                    <lightning:layoutItem class="leftColumnRegion" size="3">
                        <lightning:layout class="buttonMenu">
                            <lightning:layoutItem>
                                <lightning:buttonStateful class="" 
                                                          variant="" 
                                                          labelWhenOff="" 
                                                          labelWhenOn="Lightning Components" 
                                                          state="false"/>
                            </lightning:layoutItem>
                            <lightning:layoutItem>
                                <lightning:buttonStateful class="" 
                                                          variant="" 
                                                          labelWhenOff="" 
                                                          labelWhenOn="Flows / Process Automation" 
                                                          state="false"/>
                            </lightning:layoutItem>
                            <lightning:layoutItem>
                                <lightning:buttonStateful class="" 
                                                          variant="" 
                                                          labelWhenOff="" 
                                                          labelWhenOn="Data Visualization" 
                                                          state="false"/>
                            </lightning:layoutItem>
                            <lightning:layoutItem>
                                <lightning:buttonStateful class="" 
                                                          variant="" 
                                                          labelWhenOff="" 
                                                          labelWhenOn="Reports" 
                                                          state="false"/>
                            </lightning:layoutItem>
                        
                        </lightning:layout>
                    </lightning:layoutItem>
                	<lightning:layoutItem class="rightColumnRegion" size="9">
                        <lightning:layout class="projectDisplay"></lightning:layout>
                    </lightning:layoutItem>
                </lightning:layout>
            </lightning:layoutItem>
            <lightning:layoutItem class="footerRegion" size="12">
                {!v.footer}
            </lightning:layoutItem>
        </lightning:layout>
</aura:component>