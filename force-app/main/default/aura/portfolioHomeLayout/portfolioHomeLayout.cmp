<aura:component implements="forceCommunity:themeLayout" access="global">
    <aura:attribute name="navBar" type="Aura.Component[]" required="false"/>
    <aura:attribute name="header" type="Aura.Component[]" required="false"/>
    <aura:attribute name="footer" type="Aura.Component[]" required="false"/>
    <aura:attribute name="backgroundUrl" type="string"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> 
    <div id="homePg">
        <div style="{!'background-image: url(' + v.backgroundUrl + ');'}">
            <div class="navigation">
                {!v.navBar}
            </div>
            <div class="mainContentAreaRegion">
                {!v.body}
            </div>
            <div class="footerRegion">
                {!v.footer}
            </div>
        </div>
    </div>
</aura:component>