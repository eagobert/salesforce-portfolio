<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_is_required</fullName>
    <active>true</active>
    <description>Check that Phone or Email is completed.</description>
    <errorConditionFormula>ISBLANK(TRIM(Email)) &amp;&amp;  ISBLANK(TRIM(Phone))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Phone or Email is required.</errorMessage>
</ValidationRule>
