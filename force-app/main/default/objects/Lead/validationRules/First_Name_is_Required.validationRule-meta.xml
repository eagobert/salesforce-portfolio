<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_is_Required</fullName>
    <active>true</active>
    <description>First Name is Required</description>
    <errorConditionFormula>ISBLANK( TRIM( FirstName ) )</errorConditionFormula>
    <errorDisplayField>FirstName</errorDisplayField>
    <errorMessage>Please enter a first name</errorMessage>
</ValidationRule>
